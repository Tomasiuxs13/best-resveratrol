# Set correct MIME types for JavaScript modules
<IfModule mod_mime.c>
  AddType text/javascript .js .mjs
  AddType application/javascript .js .mjs
</IfModule>

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force HTTPS (optional but recommended)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # IMPORTANT: Map root requests to dist/ so we can keep repo clean and serve built site
  # Serve home
  RewriteRule ^$ /dist/index.html [L]

  # Static assets and root files
  RewriteRule ^assets/(.*)$ /dist/assets/$1 [L]
  RewriteRule ^favicon\.png$ /dist/favicon.png [L]
  RewriteRule ^apple-touch-icon\.png$ /dist/apple-touch-icon.png [L]
  RewriteRule ^og-image\.png$ /dist/og-image.png [L]
  RewriteRule ^robots\.txt$ /dist/robots.txt [L]
  RewriteRule ^sitemap\.xml$ /dist/sitemap.xml [L]

  # Enforce trailing slash for product pages (SEO canonicalization)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} ^/products/[^/]+$
  RewriteRule ^products/([^/]+)$ /products/$1/ [R=301,L]

  # Serve static HTML routed into dist/ for product pages
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} ^/products/[^/]+/?$
  RewriteRule ^products/([^/]+)/?$ /dist/products/$1/index.html [L]

  # Guides index and detail
  RewriteRule ^guides/?$ /dist/guides/index.html [L]
  RewriteRule ^guides/([^/]+)/?$ /dist/guides/$1/index.html [L]

  # Blog index and posts
  RewriteRule ^blog/?$ /dist/blog/index.html [L]
  RewriteRule ^blog/([^/]+)/?$ /dist/blog/$1/index.html [L]

  # FAQ and legal pages
  RewriteRule ^faq/?$ /dist/faq/index.html [L]
  RewriteRule ^privacy-policy/?$ /dist/privacy-policy/index.html [L]
  RewriteRule ^terms-of-service/?$ /dist/terms-of-service/index.html [L]
  RewriteRule ^disclaimer/?$ /dist/disclaimer/index.html [L]
  RewriteRule ^affiliate-disclosure/?$ /dist/affiliate-disclosure/index.html [L]

  # No SPA fallback needed; all routes are now exported as static HTML in /dist
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"

  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"

  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"

  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # Disable caching for SPA index.html only (NOT product pages)
  <FilesMatch "^index\.html$">
    # Only apply no-cache to root index.html, not product page index.html files
    <If "%{REQUEST_URI} == '/index.html' || %{REQUEST_URI} == '/'">
      Header set Cache-Control "no-cache, no-store, must-revalidate"
      Header set Pragma "no-cache"
      Header set Expires "0"
    </If>
  </FilesMatch>

  # Cache static product pages for better performance
  <FilesMatch "^index\.html$">
    <If "%{REQUEST_URI} =~ m#^/products/[^/]+/index\.html$#">
      Header set Cache-Control "public, max-age=3600"
    </If>
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On

  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"

  # HTML - Do NOT cache index.html (SPA entry point must always be fresh)
  # ExpiresByType text/html "access plus 1 hour"

  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
</IfModule>

# Prevent directory browsing
Options -Indexes

# Custom Error Pages (optional)
# ErrorDocument 404 /index.html
# ErrorDocument 403 /index.html
# ErrorDocument 500 /index.html
