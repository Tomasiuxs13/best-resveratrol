# Set correct MIME types for JavaScript modules
<IfModule mod_mime.c>
  AddType text/javascript .js .mjs
  AddType application/javascript .js .mjs
</IfModule>

# Serve the built static site from /dist by default
DirectoryIndex dist/index.html index.html

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force HTTPS (optional but recommended)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # IMPORTANT: Map root requests to dist/ so we can keep repo clean and serve built site
  # 1) Force homepage to dist/index.html explicitly
  RewriteRule ^$ dist/index.html [L]

  # 2) Enforce trailing slash for product pages (canonicalization)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} ^/products/[^/]+$
  RewriteRule ^products/([^/]+)$ /products/$1/ [R=301,L]

  # 3) Map all non-dist requests to /dist preserving the path
  RewriteCond %{REQUEST_URI} !^/dist/
  RewriteRule ^(.*)$ dist/$1 [L]

  # Note: With DirectoryIndex and mapping above, /products/<slug>/ resolves to /dist/products/<slug>/index.html

  # No SPA fallback needed; all routes are now exported as static HTML in /dist
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"

  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"

  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"

  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # Disable caching for SPA index.html only (NOT product pages)
  <FilesMatch "^index\.html$">
    # Only apply no-cache to root index.html, not product page index.html files
    <If "%{REQUEST_URI} == '/index.html' || %{REQUEST_URI} == '/'">
      Header set Cache-Control "no-cache, no-store, must-revalidate"
      Header set Pragma "no-cache"
      Header set Expires "0"
    </If>
  </FilesMatch>

  # Cache static product pages for better performance
  <FilesMatch "^index\.html$">
    <If "%{REQUEST_URI} =~ m#^/products/[^/]+/index\.html$#">
      Header set Cache-Control "public, max-age=3600"
    </If>
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On

  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"

  # HTML - Do NOT cache index.html (SPA entry point must always be fresh)
  # ExpiresByType text/html "access plus 1 hour"

  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
</IfModule>

# Prevent directory browsing
Options -Indexes

# Custom Error Pages (optional)
# ErrorDocument 404 /index.html
# ErrorDocument 403 /index.html
# ErrorDocument 500 /index.html
